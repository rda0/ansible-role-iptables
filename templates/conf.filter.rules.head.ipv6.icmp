echo -e "## Allow icmp (ping)"
echo -e "# Allow inbound ping from trusted networks"
if [ "${ALLOW_PING_INET}" == "true" ]; then
  echo -e "-A INPUT  -p ipv6-icmp --icmpv6-type echo-request -j ACCEPT"
else
  echo -e "-A INPUT  -p ipv6-icmp --icmpv6-type echo-request -m set --match-set trusted6 src -j ACCEPT"
fi
{% if not iptables_policy_o_accept|default(false) %}
echo -e "# Allow outbound ping to internet"
echo -e "-A OUTPUT -p ipv6-icmp --icmpv6-type echo-request -j ACCEPT"
{% endif %}
